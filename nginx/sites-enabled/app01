server {

    server_name briccs.xuhl-tr.nhs.uk;
    listen 443;
    ssl on;

    ssl_certificate /cert/briccs64sha1.cer;
    ssl_certificate_key /cert/briccs.xuhl-tr.nhs.uk.key;

    client_body_in_file_only clean;
    client_body_buffer_size 32K;
    client_max_body_size 32M;

    location /redcap {
        proxy_pass http://10.156.254.207:82/redcap;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

   location /appointments {
        proxy_pass http://10.156.254.207:81/appointments;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

   location /labels {
        proxy_pass http://10.156.254.207:83/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Script-Name /labels;
    }

}

server {

    server_name _;
    listen 80;

    client_body_in_file_only clean;
    client_body_buffer_size 32K;
    client_max_body_size 32M;

    location / {
       root   /brc_intranet;
       try_files $uri /index.html;
    }

    location /redcap {
        proxy_pass http://10.156.254.207:82/redcap;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

   location /appointments {
        proxy_pass http://10.156.254.207:81/appointments;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

   location /labels {
        proxy_pass http://10.156.254.207:83/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Script-Name /labels;
    }

}

